<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <!--android:background="?attr/mainBackground" -->


    <TextView
        android:id="@+id/choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c0c0c0"
        android:gravity="center"
        android:text="请选择登方式" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageButton

            android:id="@+id/qq"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/a_y"

            />

        <ImageButton
            android:id="@+id/weibo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/ach" />

        <ImageButton
            android:id="@+id/phone"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/ya" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp">

        <RadioButton
            android:id="@+id/collection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="收藏"
            android:textColor="?attr/MyColor"
            android:textSize="20dp"

            />

        <RadioButton
            android:id="@+id/history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="历史"
            android:textColor="?attr/MyColor"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="夜间"
            android:textColor="?attr/MyColor"
            android:textSize="20dp" />


    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text1_f4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="消息通知"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text2_f4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="2dp"
            android:text="头条商城"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text3_f4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="2dp"
            android:text="京东特供"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text4_f4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="我要爆料"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text5_f4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="用户反馈"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text6_f4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="系统设置"
            android:textSize="20dp" />

    </LinearLayout>
</LinearLayout>